<launch>

	<node name="sound_play" pkg="sound_play" type="soundplay_node.py" />

	<node name="speech_database" pkg="speech_database" type="speech_database">
		<param name="audioPath" value="$(find speech_database)/storedSpeech" />
		<param name="language" value="pt" />  <!-- de, en, fr, ... (all languages supported by Google) -->
		<param name="mplayer" type="bool" value="false" /> <!-- true for mplayer use -->
		<param name="jsonPath" value=" $(find speech_database)/files.json" />
		<param name="volume" value="1.0" />
	</node>

</launch>
